<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thresholdActivity"
    android:orientation="vertical"
    android:background="#F7F5F5"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="阈值设置"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/main0"
            />
        <TextView
            android:id="@+id/threshold_tv_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/fanhuianniu"
            android:paddingLeft="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c6c6c6"
        />
    <LinearLayout
        android:id="@+id/threshold_line1"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/threshold_tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="土壤温度值："
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/threshold_tv_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="-1"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/threshold_tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="最小值："
                    android:textColor="#000000"
                    />
                <EditText
                    android:id="@+id/threshold_et_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center"
                    android:text="10"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="5dp"
            android:paddingLeft="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/threshold_tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="土壤温度当前状态："
                    android:textColor="#000000"
                    android:gravity="left"
                    />
                <TextView
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/threshold_tv_5"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/threshold_tv_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="最大值："
                    android:textColor="#000000"
                    />
                <EditText
                    android:id="@+id/threshold_et_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center"
                    android:text="10"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/threshold_line2"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="25dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/threshold_tv_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="土壤湿度值："
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/threshold_tv_8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="-1"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/threshold_tv_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="最小值："
                    android:textColor="#000000"
                    />
                <EditText
                    android:id="@+id/threshold_et_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center"
                    android:text="10"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="5dp"
            android:paddingLeft="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/threshold_tv_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="土壤湿度当前状态："
                    android:textColor="#000000"
                    android:gravity="left"
                    />
                <TextView
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/threshold_tv_11"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/threshold_tv_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="最大值："
                    android:textColor="#000000"
                    />
                <EditText
                    android:id="@+id/threshold_et_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center"
                    android:text="10"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/threshold_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:background="@drawable/lv_btn"
        />
</LinearLayout>