<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/home_tv_title"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="智能农业管理系统"
        android:textColor="@color/main0"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_below="@id/home_tv_title"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c6c6c6"
        />
    <androidx.viewpager.widget.ViewPager
        android:layout_marginTop="61dp"
        android:id="@+id/home_vp01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="65dp"
        />
    <ImageView
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line01"
        />
    <RadioGroup
        android:id="@+id/home_rg01"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="15dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/home_rb01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/radiobtn01"
            android:text="首页"
            android:textColor="@drawable/text_click"
            android:gravity="center"
            />
        <RadioButton
            android:id="@+id/home_rb02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:text="设置"
            android:textColor="@drawable/text_click"
            android:gravity="center"
            android:drawableTop="@drawable/radiobtn02"
            />
        <RadioButton
            android:textColor="@drawable/text_click"
            android:id="@+id/home_rb03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:text="个人中心"
            android:gravity="center"
            android:drawableTop="@drawable/radiobtn03"
            />
    </RadioGroup>
</RelativeLayout>